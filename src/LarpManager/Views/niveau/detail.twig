{% extends "layout.twig" %}

{% block title %}Niveaux{% endblock title %}

{% block content %}

<a href="{{ path("niveau") }}">Retour à la liste des niveaux</a>

<div class="page-header">
	<h1>Détail de {{ niveau.label }}</h1>
</div>
	
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-8">
			
			<div class="panel panel-primary">
  				<div class="panel-heading">
  					{{ niveau.label }}				
  				</div>

  				<div class="panel-footer">
  					<div class="btn-group" role="group" aria-label="...">
  						<a  class="btn btn-primary" role="button" href="{{ path('niveau.update', {index : niveau.id}) }}">Modifier</a>
						<a  class="btn btn-default" role="button" href="{{ path('niveau.detail.export', {index : niveau.id}) }}">Exporter</a>
					</div>
  				</div>
			</div>			
		</div>
	</div>
</div>
	
			
{% endblock %}
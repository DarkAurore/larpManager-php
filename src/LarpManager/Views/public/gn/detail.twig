{% extends "layout.twig" %}

{% block title %}Gn{% endblock title %}

{% block content %}

<div class="container-fluid">

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage')  }}">Accueil</a></li>
		<li class="active">{{ gn.label }}</li>
	</ol>
								
	<div class="well well-sm bs-component">
		<h4>
			{{ gn.label }}
		</h4>
	</div>
			
	<div class="list-group">
		    		
    	<div class="list-group-item">
	    	<h4 class="list-group-item-heading">Description</h4>
   			<p class="list-group-item-text">
   			{% if not gn.description %}
   				<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
   					Attention, ce gn n'a pas de description.
   				{% else %}
   					{{ gn.description }}
   				{% endif %}
   				</p>
    	</div>
	    		
	    <div class="list-group-item">
	    	<h4 class="list-group-item-heading">Ou ?</h4>
	    	<p class="list-group-item-text">
	    		{{ gn.adresse }}
	    	</p>
	    </div>
	    
	    <div class="list-group-item">
	    	<h4 class="list-group-item-heading">Quand ?</h4>
	    	<p class="list-group-item-text">
	    		Du {{ gn.dateDebut|date('Y-m-d') }} au {{ gn.dateFin|date('Y-m-d') }}.<br />
	    		L'acceuil des joueurs débutera le {{ gn.dateInstallationJoueur|date('Y-m-d') }} à {{ gn.dateInstallationJoueur|date('H:i') }} heure. 
	    	</p>
	    </div>
	
	</div>
</div>
	
			
{% endblock %}
{% extends "layout.twig" %}

{% block title %}Votre personnage{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Page d'accueil</a></li>
		<li><a href="{{ path('participant.index', {'participant' : participant.id}) }}">{{ participant.gn.label }}</a></li>
		<li><a href="{{ path('participant.personnage', {'participant': participant.id}) }}">{{ personnage.nom }} {{ personnage.surnom }}</a></li>
		<li class="active">Modification</li>
	</ol>
	
	<div class="well bs-component">
		<form action="{{ path('participant.personnage.edit', {'participant': participant.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
				{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock content %}
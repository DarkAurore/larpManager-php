{% extends "layout.twig" %}

{% block title %}Competence {{ competence.competenceFamily.label }} ({{ competence.level.label }}){% endblock title %}

{% block content %}

<ol class="breadcrumb">
	<li><a href="{{ path('homepage')  }}">Accueil</a></li>
	<li><a href="{{ path('participant.index', {'participant' : participant.id}) }}">{{ participant.gn.label }}</a></li>
	<li><a href="{{ path('participant.personnage', {'participant' : participant.id}) }}">{{ participant.personnage.nom }} {{ participant.personnage.surnom }}</a></li>
	<li class="active">{{ competence.competenceFamily.label }} ({{ competence.level.label }})</li>
</ol>


<div class="well well-sm">
	<div class="header">
		<h5>{{ competence.competenceFamily.label }} ({{ competence.level.label }})</h5>
	</div>
	
	<object type="application/pdf" width="100%" height="1200px" >
		<param name="src" value="{{ path('participant.competence.document',{'participant': participant.id, 'competence' :competence.id}) }}" />
	 
		<p>It appears your Web browser is not configured to display PDF files. No worries, just <a href="{{ path('participant.competence.document',{'participant': participant.id, 'competence' :competence.id}) }}">click here</a> to download the PDF file.</p>
	</object>

</div>
{% endblock content %}
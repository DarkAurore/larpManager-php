{% extends "layout.twig" %}

{% block title %}Groupe secondaire{% endblock title %}

{% block content %}

<div class="container-fluid">
	
	
		<ol class="breadcrumb">
			<li><a href="{{ path('homepage')  }}">Accueil</a></li>
			<li class="active">Groupes secondaires</li>
		</ol>
	
		<div class="row">
		<div class="col-xs-12 col-md-8">
			<div class="well well-sm">
				<h4>
					Liste des groupes secondaires
					<small>
						( {{ groupeSecondaires|length }} groupes )
					</small>
				</h4>
			</div>
			
			<ul class="list-group">
				{% for groupe in groupeSecondaires %}
					<li class="list-group-item">
						<h4 class="list-group-item-heading">
							{{ groupe.label }}
							<div class="btn-group pull-right" role="group" aria-label="...">
								<a href="{{ path('groupeSecondaire.postuler', {groupe: groupe.id}) }}" class="btn btn-primary" role="button">Postuler</a>
							</div>
						</h4>
						<p class="list-group-item-text">
							{{ groupe.description|markdown }}
						</p>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>

</div>
	
{% endblock %}
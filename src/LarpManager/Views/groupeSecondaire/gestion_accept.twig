{% extends "layout.twig" %}

{% block title %}Groupes secondaires{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("groupeSecondaire.gestion", {'index':groupeSecondaire.id}) }}">{{ groupeSecondaire.label }}</a></li>
		<li class="active">Acceptation d'un postulant</li>
	</ol>
	
		
	<div class="well bs-component">
		<form action="{{ path('groupeSecondaire.gestion.accept', {'groupe': groupeSecondaire.id, 'postulant': postulant.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Acceptation d'un postulant</legend>
				
				<div class="list-group">
					<div class="list-group-item">
						<div class="list-group-item-heading">
							<strong>{{ postulant.personnage.nom }} - {{ postulant.personnage.surnom }}</strong>
						</div>
						<div class="list-group-item-text">
							{{ postulant.explanation|markdown }}
						</div>
					</div>
				</div>
				
				
				
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
				<p>Le message suivant sera envoyé au postulant</p>
				<p><em>"Vous faites désormais partie du groupe {{ groupeSecondaire.label }} ! Vous avez accès au forum du groupe."</em></p>
				
				{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock content %}
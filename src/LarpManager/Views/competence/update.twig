{% extends "layout.twig" %}

{% block title %}Compétences{% endblock title %}

{% block content %}
	
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12 col-md-8">
				<a href="{{ path("competence") }}">Retour à la liste des compétences</a>
				{{ include("competence/fragment/form.twig",{
					'legend': 'modification d\'une compétence',
					'action': path('competence.update',{'index': competence.id}), 
					'form' : form}) }}
			</div>

			<div class="col-xs-12 col-md-4">
				<h3>Niveaux</h3>	
				{{ include("competence/fragment/niveau.twig",{
					'legend' : 'ajout d\'un niveau à une compétence',
					'competence': competence,
					'add' : true}) }}
			</div>
		</div>
	</div>
		
{% endblock content %}
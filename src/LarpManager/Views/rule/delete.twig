{% extends "layout.twig" %}

{% block title %}Règles{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("rules") }}">Liste des règles</a></li>
		<li class="active">Suppression d'une règle</li>
	</ol>
	
	<div class="well well-sm">
		<form action="{{ path('rule.delete', {'rule': rule.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Supprimer {{ rule.label }}</legend>
					{{ rule.description|markdown }}
					{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
					{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock content %}
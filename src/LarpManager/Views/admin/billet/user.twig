{% extends "layout.twig" %}

{% block title %}Billets{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('billet.list') }}">Liste des billets</a></li>
		<li class="active">Liste des utilisateurs -- {{ billet.label }}</li>
	</ol>
	
	<div class="well well-sm">
		<div class="list-group">
			{% for user in billet.users %}
				<div class="list-group-item">{{ user.name }}</div>
			{% endfor %}
		</div>
	</div>
	
{% endblock %}
{% extends "layout.twig" %}

{% block title %}Objets{% endblock title %}

{% block style %}
<style>
.hover_img a { position:relative; }
.hover_img a span { position:absolute; display:none; z-index:99; }
.hover_img a:hover span { display:block; }
</style>
{% endblock style %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Objets</li>
	</ol>
	
	<div class="well well-sm">
		 	<table class="table">
		 		<thead>
		 			<tr>
		 				<th>numéro</th>
		 				<th>Qualité et identification</th>
		 				<th>Label</th>
		 				<th>Photo</th>
		 				<th>Description</th>
		 				<th>Spécial</th>
		 				<th>Groupe</th>
		 				<th>Personnage</th>
		 				<th>Action</th>
		 			</tr>
		 		</thead>
		 		<tbody>
	    		{% for item in items%}
		    		<tr>
		    			<td>{{ item.numero }}</td>
		    			<td>{{ item.quality.numero }}{{ item.identification }}</td>
		    			<td>{{ item.label }}</td>
		   				<td>
							<div class="hover_img">
								<a href="#">Show Image<span>
						    		<img src="{{ path('stock_objet_photo',{'objet': item.objet.id, 'miniature': true}) }}" alt="{{ item.label }}" />
						    		</span>
						    	</a>
					    	</div>
					    </td>
		    			<td>{{ item.description|markdown }}</td>
		    			<td>{{ item.special|markdown }}</td>
		    			<td>{{ item.groupes|join(',') }}</td>
						<td>{{ item.personnages|join(',') }}</td>
					    <td>
			  				<div class="btn-group" role="group" aria-label="...">
					  			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	      							Action
	      							<span class="caret"></span>
	    						</button>
	    						<ul class="dropdown-menu">
	    							<li><a href="{{ path('item.detail', {'item': item.id}) }}">Détails</a></li>
	    							<li><a href="{{ path('item.update', {'item': item.id}) }}">Modifier</a></li>
	    							<li><a href="{{ path('item.delete', {'item': item.id}) }}">Supprimer</a></li>
				  				</ul>
				  			</div>
				  		</td>
					</tr>
	  			{% endfor %}
	  			</tbody>
	  		</table>
	  </div>
	
{% endblock content %}
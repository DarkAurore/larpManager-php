{% extends "layout.twig" %}

{% block content %}
	
	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Chronologie</li>
	</ol>
	
	<div class="panel panel-default">
		<div class="panel-body">
			<a class="btn btn-primary pull-right" href="{{ path('chronologie.admin.add') }}">Ajouter une chronologie</a>
		
		
			<table class="table table-striped table-bordered table-condensed table-hover">
				<caption>Liste des chronologies</caption>
				<thead>
					<tr>
						<th>ID</th>
						<th>Pays</th>
						<th>Date</th>
						<th>Description</th>
						<th/>
						<th/>
					</tr>
				</thead>
				<tbody>
					{% for chrono in chronologies %}
						<tr>
							<td>{{ chrono.id }}</td>
							<td>{{ chrono.territoire.nom }}</td>
							<td>{{ chrono.date|date('Y-m-d') }}</td>
							<td>{{ chrono.description }}</td>
							<td><a href="{{ path('chronologie.admin.update', {index: chrono.id}) }}">Modifier</a></td>
							<td><a href="{{ path('chronologie.admin.remove', {index: chrono.id}) }}">Supprimer</a></td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	
{% endblock %}
{% extends "layout.twig" %}

{% block title %}Grandeur nature{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Liste des grandeur nature</li>
	</ol>

	<div class="well well-sm">
	
		<ul class="list-group">
			<li class="list-group-item">
				{% if paginator.totalItems == 1 %}
			        <strong>1</strong> grandeur nature trouvé.
			    {% else %}
			        <strong>{{ paginator.totalItems }}</strong> grandeur nature trouvés.
			    {% endif %}
			
			    Montre <strong>{{ paginator.currentPageFirstItem }} - {{ paginator.currentPageLastItem }}</strong>.
		    </li>
		    <li class="list-group-item">
		    	<a href="{{ path('gn.add') }}">Ajouter un grandeur nature</a>
		    </li>
		 </ul>

		{{ paginator|raw }}
	    <table class="table table-striped table-bordered table-condensed table-hover">
			<thead>
				<tr>
					<th>
						{% if app.request.get('order_dir') == 'ASC' and app.request.get('order_by') == 'id' %}
							<a href="{{ path('gn.list', {'order_by': 'id', 'order_dir': 'DESC'}) }}">
						{%  else %}
							<a href="{{ path('gn.list', {'order_by': 'id', 'order_dir': 'ASC'}) }}">
						{% endif %}
							#	
						{% if app.request.get('order_by') == 'id'  %}
							{% if app.request.get('order_dir') == 'ASC' %}
								<span class="caret"></span>
							{%else%}
									<span class="dropup">
    									<span class="caret"></span>
									</span>
								{% endif %}
						{% endif %}
						</a>
					</th>
					<th>
						{% if app.request.get('order_dir') == 'ASC' and app.request.get('order_by') == 'label' %}
							<a href="{{ path('gn.list', {'order_by': 'label', 'order_dir': 'DESC'}) }}">
						{%  else %}
							<a href="{{ path('gn.list', {'order_by': 'label', 'order_dir': 'ASC'}) }}">
						{% endif %}
							Titre
						{% if app.request.get('order_by') == 'label'  %}
							{% if app.request.get('order_dir') == 'ASC' %}
								<span class="caret"></span>
							{%else%}
									<span class="dropup">
    									<span class="caret"></span>
									</span>
								{% endif %}
						{% endif %}
						</a> 
					</th>
					<th>Etat</th>
					<th>Ventes</th>
				</tr>
			</thead>
			<tbody>
				{% for gn in gns %}
					<tr>
						<td><a href="{{ path('gn.update',{'gn':gn.id}) }}">{{ gn.id }}</a></td>
						<td><a href="{{ path('gn.detail',{'gn':gn.id}) }}">{{ gn.label }}</a></td>
						<td>{% if gn.actif %}<span class="text-success">Actif</span>{% else %}non actif{% endif %}</td>
						<td><a href="{{ path('gn.vente',{'gn': gn.id}) }}">Ventes</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		
		{{ paginator|raw }}
		
	</div>
	
{% endblock %}
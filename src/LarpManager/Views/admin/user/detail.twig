{% extends "layout.twig"  %}

{% block title %}{{ user.displayName }}{% endblock %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		{% if is_granted('ROLE_ADMIN', app.user) %}<li><a href="{{ path('user.admin.list') }}">Liste des utilisateurs</a></li>{% endif %}
		<li class="active">Détail d'un utilisateur</li>
	</ol>
	
	<div class="well well-sm">
	
	<div class="media">
    	<img class="media-object pull-left" src="{{ imageUrl }}" width="80" height="80">

    	<div class="media-body">

	        <h1 class="media-heading">
	            {{ user.displayName }}
	        </h1>

	        {% if not user.isEnabled %}
	            <div style="margin-bottom: 5px;">
	                <span class="label label-danger">Pending email confirmation</span>
	                <span class="text-muted">(visible to admins only)</span>
	            </div>
	        {% endif %}


	        {% if is_granted('EDIT_USER', user) %}
	            <div class="text-muted">
	                {{ user.email }}
	            </div>
	        {% endif %}

	        <div class="text-muted">
	            Registered {{ user.creationDate|date('F j, Y') }}
	        </div>

	        
	        
	        {% if user.participant %}
	        	<div>
	        		Participe à {{ user.participant.gn.label }}
	        	</div>
	        	
	        	{% if user.participant.groupe %}
	        		<div>
	        			Membre du groupe <a href="{{ path('groupe.detail',{'index':user.participant.groupe.id})  }}">{{ user.participant.groupe.nom }}</a>
	        		</div>
	        	{% endif %}
	        
	        	{% if user.participant.personnage %}
	        		<div>
						Personnage : <a href="{{ path('personnage.admin.detail',{'personnage':user.participant.personnage.id}) }}">{{ user.participant.personnage.publicName }}</a>
					</div>	        		
	        	{% endif %}
	        {% endif %}
	        
	        {% if is_granted('EDIT_USER', user) %}
	            <div>
	                <a href="{{ path('user.edit', {'id': user.id}) }}"><span class="glyphicon glyphicon-edit" style="margin-right: 5px;"></span>Modifier</a>
	            </div>
	        {% endif %}
    	</div>
	</div>
</div>


{% endblock %}

<div class="well bs-component">
	<form action="{{ action }}" method="POST" {{ form_enctype(form) }} novalidate>
		<fieldset>
			<legend>{{ legend }}</legend>
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
										
				{{ form_row(form.classe) }}
				
				<div class="panel panel-default">
					<div class="panel-heading">
						<h6>Composition du groupe</h6>
					</div>
					<div class="panel-body">
						<p>Composez votre personnage secondaire avec une ou plusieurs competences.</p>
					</div>
					<ul class="list-group competences" data-prototype="{{ form_widget(form.personnageSecondaireCompetences.vars.prototype)|e }}">
				    	{% for competence in form.personnageSecondaireCompetences %}
				           	<li class="list-group-item">{{ form_widget(competence) }}</li>
				       	{% endfor %}
					</ul>
				</div>
				
				{{ form_rest(form) }}
		</fieldset>
	</form>
</div>
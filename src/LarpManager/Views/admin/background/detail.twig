{% extends "layout.twig" %}

{% block title %}Background{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('background.list') }}">Liste des background</a></li>
		<li class="active">Détail d'un background</li>
	</ol>

	<div class="list-group">
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Groupe</h6></div>
			<div class="list-group-item-text">{{ background.groupe.nom }}</div>
		</div>
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Visibilité</h6></div>
			<div class="list-group-item-text">{{ background.visibility|explainVisibility }}</div>
		</div>
	</div>
	
	<div class="panel panel-default">
		<div class="panel-heading"><h4>Texte</h4></div>
		<div class="panel-body">
			<p>{{ background.text|markdown }}</p>
		</div>
	</div>
	
{% endblock %}
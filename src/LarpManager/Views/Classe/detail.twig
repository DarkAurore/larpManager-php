{% extends "layout.twig" %}

{% block content %}

<a href="{{ path("classe") }}">Retour à la liste des classes</a>

<div class="page-header">
	<h1>Détail de {{ classe.label }}</h1>
</div>
	
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-8">
			
			<div class="panel panel-primary">
  				<div class="panel-heading">
  					{{ classe.label }}				
  				</div>
  				<div class="panel-body">
    				<p>{{ classe.description }}</p>
  				</div>
  				<div class="panel-footer">
  					<div class="btn-group" role="group" aria-label="...">
  						<a  class="btn btn-primary" role="button" href="{{ path('classe.update', {index : classe.id}) }}">Modifier</a>
						<a  class="btn btn-default" role="button" href="{{ path('classe.detail.export', {index : classe.id}) }}">Exporter</a>
					</div>
  				</div>
			</div>
		</div>
		
		<div class="col-xs-12 col-md-4">
			<div class="panel panel-default">
  				<div class="panel-heading">
  					Compétences favorites		
  				</div>
  				<div class="panel-body">
					{{ classe.competenceFavorites|join(', ') }}
  				</div>
  			</div>
		</div>
		
		<div class="col-xs-12 col-md-4">
			<div class="panel panel-default">
  				<div class="panel-heading">
  					Compétences normales		
  				</div>
  				<div class="panel-body">			
					{{ classe.competenceNormales|join(', ') }}
  				</div>
  			</div>
		</div>
		
		<div class="col-xs-12 col-md-4">
			<div class="panel panel-default">
  				<div class="panel-heading">
  					Compétences acquises à la création		
  				</div>
  				<div class="panel-body">
					{{ classe.competenceCreations|join(', ') }}
  				</div>
  			</div>
		</div>
	</div>
</div>
	
			
{% endblock %}
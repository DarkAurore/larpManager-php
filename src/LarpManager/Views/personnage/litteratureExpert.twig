{% extends "layout.twig" %}

{% block title %}{{ personnage.publicName }}{% endblock title %}

{% block content %}

<div class="container-fluid">

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage')  }}">Accueil</a></li>
		<li><a href="{{ path('personnage')  }}">Votre personnage</a></li>
		<li class="active">Choix de nouvelles langues</li>
	</ol>
	
	<div class="well bs-component">
	<form action="{{ path('personnage.litterature.expert',{'personnage':personnage.id}) }}" method="POST" {{ form_enctype(form) }}>
		<fieldset>
			<blockquote>Votre compétence vous donne accés à trois langues supplémentaires. Attention, une fois ce formulaire validé, vous ne pourrez plus revenir en arrière.</blockquote>
			{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
			
			{{ form_row(form.langues) }}
			{{ form_rest(form) }}
		</fieldset>
	</form>
	</div>
</div>

{% endblock content %}
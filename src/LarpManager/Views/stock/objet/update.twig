{% extends "layout.twig" %}

{% block content %}

<div class="well well-sm">

	<div class="page-header">
		<h1>Modification d'un objet</h1>
	</div>

	<div class="container-fluid">
	    {% if objet.photo %}
        	<img src="{{ path('stock_objet_photo',{index: objet.id}) }}" alt="{{ objet.photo.name }}" class="img-responsive" />
        {% endif %}
		<div class="row">
			<div class="col-xs-12 col-md-8">
				{{ include("stock/objet/fragment/form.twig",{'action': path('stock_objet_update',{'index':objet.id}), 'form' : form}) }}
			</div>
		</div>
	</div>

</div>	
{% endblock content %}
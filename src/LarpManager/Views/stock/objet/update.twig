{% extends "layout.twig" %}

{% block content %}

	<div class="page-header">
		<h1>Modification d'un objet</h1>
	</div>

	<div class="container-fluid">
	    {% if objet.photo %}
        	<img src="{{ app.request.basepath }}/uploads/img/{{ objet.photo.realName }}" alt="{{ objet.photo.name }}" height="500" width="500"/>
        {% endif %}
		<div class="row">
			<div class="col-xs-12 col-md-8">
				{{ include("stock/objet/form.twig",{'action': path('stock_objet_update',{'index':objet.id}), 'form' : form}) }}
			</div>
		</div>
	</div>
	
{% endblock content %}
{% extends "layout.twig" %}

{% block content %}

<div class="well well-sm">

	<div class="page-header">
		<h1>{{ titre }}</h1>
	</div>

	<form class="form-inline" action="{{ path(pagination.route, {'page':1}) }}" method="POST" {{ form_enctype(form) }}>
		{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
		{{ form(form) }}
	</form>
					
	<div>		
	{{ include("stock/objet/fragment/pagination.twig",{'pagination': pagination}) }}
	</div>
											
	<div class="btn-group" role="group" aria-label="...">
		<a href="{{ path(pagination.route, pagination.route_params|merge({'page': 1})) }}" class="btn btn-default"><span class="icon fa fa-refresh"></span></a>
		<a href="{{ path('stock_objet_add') }}" class="btn btn-default"><span class="icon fa fa-plus"></span></a>
	</div>
	
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12 ">
				{{ include("stock/objet/fragment/list.twig",{'objets': objets, 'add': false}) }}
			</div>
		</div>
	</div>
	
</div>
{% endblock content %}
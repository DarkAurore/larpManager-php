<ul class="list-group">
	{%  if add != false %}
		<a href="{{ path('classe.add') }}" class="list-group-item active">
			<span class="badge"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></span>
			<h4 class="list-group-item-heading">Ajouter une classe</h4>
		</a>
	{%  endif %}
	{%  for classe in classes %}
	<li class="list-group-item">
		<h4 class="list-group-item-heading">
			{{ classe.label }}
		</h4>
		<p class="list-group-item-text">
			<div class="btn-group pull-right" role="group" aria-label="...">
				<a href="{{ path('classe.detail', {index: classe.id}) }}" class="btn btn-primary" role="button">Voir</a>
			    <a href="{{ path('classe.update', {index: classe.id}) }}" class="btn btn-default" role="button">Modifier</a>
			</div>
			
			{% if classe.description %}
				<p>{{ classe.description }}</p>
			{% else %}
				<p class="text-warning">Attention, cette classe n'a pas description</p>
			{%  endif %}
			
			{% if classe.competenceFavorites|length != 0 %}
				<p>
					<strong>Compétences favorites : </strong>{{ classe.competenceFavorites|join(', ') }}
				</p>
			{% else %}
				<p class="text-warning">Attention, cette classe n'a pas de compétences favorites</p>
			{% endif %}
		
			{% if classe.competenceNormales|length != 0 %}
				<p>
					<strong>Compétences normales : </strong>{{ classe.competenceNormales|join(', ') }}
				</p>
			{% else %}
				<p class="text-warning">Attention, cette classe n'a pas de compétences normales</p>
			{% endif %}
		
			{% if classe.competenceCreations|length != 0 %}
				<p>
					<strong>Compétences acquises à la création : </strong>{{ classe.competenceCreations|join(', ') }}
				</p>
			{% else %}
				<p class="text-warning">Attention, cette classe n'a pas de compétences acquises à la créations</p>
			{% endif %}
		</p>
	</li>
	{%  endfor %}
</ul>
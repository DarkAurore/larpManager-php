{% extends "layout.twig" %}

{% block title %}Forum - message{% endblock title %}

{% block content %}

	<a href="{{ path('forum.topic', {'index': post.topic.id}) }}">Retour au topic</a>
	<div class="container-fluid">
		<div class="row">
		
			<div class="col-xs-12 col-md-8">
				{{ include("forum/fragment/post.twig",{'post': post}) }}
			</div>
		</div>
	</div>
	
	<a href="{{ path('forum.post.response',{'index':post.id}) }}">Repondre</a>
	
{% endblock content %}
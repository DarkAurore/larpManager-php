{% extends "layout.twig" %}

{% block title %}Forum - Modification d'un message{% endblock title %}

{% block content %}

	<div class="container-fluid">
		<div class="row">
		
			{# le formulaire pour saisir son message #}
			<div class="col-xs-12 col-md-8">
				{{ include("forum/fragment/post_form.twig",{
					'legend': 'Modification d\'un message',
					'action': path('forum.post.update', {'index': post.id}), 
					'form' : form}) }}
			</div>
		</div>
	</div>
	
{% endblock content %}

{% block javascript %}

	{{ parent() }}

	{# inclusion du plugin tinymce pour la saisie du post #}   
	<script src="{{ app.request.basepath }}/js/tinymce/tinymce.min.js"></script>

	<script type="text/javascript">
		tinyMCE.init({
				mode: "textareas",
				theme: "modern",
				plugins : "spellchecker,insertdatetime,preview", 
		});
		
	</script>

{% endblock javascript %}
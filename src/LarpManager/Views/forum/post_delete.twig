{% extends "layout.twig" %}

{% block title %}Forum - Suppression d'un message{% endblock title %}

{% block content %}

	<div class="container-fluid">
		<div class="row">
		
			{# le formulaire pour saisir son message #}
			<div class="col-xs-12 col-md-8">
				<div class="well">
					{{ post.text|markdown }}
				</div>
				{{ include("forum/fragment/post_form.twig",{
					'legend': 'Suppression d\'un message',
					'action': path('forum.post.delete', {'index': post.id}), 
					'form' : form}) }}
			</div>
		</div>
	</div>
	
{% endblock content %}
{% extends "layout.twig" %}

{% block title %}Forum{% endblock title %}

{% block content %}

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-12">
			
			<div class="panel">
				<div class="panel-heading">
					<h5>
						<div class="pull-right">
							<a class="btn btn-default" href="{{ path('forum.topic.add',{'index': topic.id}) }}">Ajouter un nouveau sous-forum</a>
						</div>
						{{ topic.title }}
						{{ topic.description }}
					</h5>
				</div>
				<div class="panel-body">
					{# liste des topics #}
					{{ include("forum/fragment/topic_list.twig", {'topics' : topic.topics}) }}
				</div>
			</div>
			
			<div class="panel">
				<div class="panel-heading">
					<h5>
						<div class="pull-right">
							<small><a class="btn btn-default" href="{{ path('forum.post.add', {'index':topic.id}) }}">Ajouter un nouveau message</a></small>
						</div>
						Discussions
					<h5>
				</div>
				<div class="panel-body">
					{# liste des posts #}
					{{ include("forum/fragment/post_list.twig", {'posts' : topic.posts}) }}
				</div>
			</div>
		</div>
	</div>

</div>
	
{% endblock %}
			<div class="col-sm-6">
				{[{ territoire.description }]}
			</div>
			<div class="col-sm-6">
				<strong>Groupes</strong>
				<strong>Chronologie</strong>
				<ul>
					<li ng-repeat="event in territoire.chronologies">
						{[{ event.year }]}
						{[{ event.nom }]}
						{[{ event.description }]}
					</li>
				</ul>
			</div>
		</div>
	</li>
</ul>


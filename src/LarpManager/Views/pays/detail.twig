{% extends "layout.twig" %}

{% block content %}


<div class="page-header">
<h1>
	{{ pays.nom }}
</h1>
</div>

<p class="bg-info">Créé par {{ pays.creator.username }} le {{ pays.creationDate|date('Y-m-d H:i:s') }}. Dernière mise à jour le {{ pays.updateDate|date('Y-m-d H:i:s') }}</p>
<p class="bg-primary">{{ pays.description }}</p>


<a href="{{ path('pays.update', {index : pays.id}) }}">Modifier</a>
<a href="{{ path('pays.detail.export', {index : pays.id}) }}">Exporter</a>

<h3>Liste des régions rattachées à ce pays ({{ pays.regions|length }} régions)</h3>
<ul>
{% for region in pays.regions %}
	<li><a href="{{ path('region.detail',{'index': region.id}) }}">{{ region.nom }}</a></li>
{% endfor %}
</ul>

{% endblock %}